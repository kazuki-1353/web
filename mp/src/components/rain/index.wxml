<view class="comp">
  <block wx:for="{{list}}" wx:key="id">
    <view class="item" style="left:{{item.left}}%;animation-name:{{isPlay&&'rain'}};animation-duration:{{item.time}}s;animation-delay:{{item.delay}}s;">
      <image class="item__img" style="width:{{item.size}}px;height:{{item.size}}px;" src="{{ item.img }}"></image>
    </view>
  </block>
</view>