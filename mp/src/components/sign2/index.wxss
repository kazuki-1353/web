:host {
  color: #ffffff;
}

.comp {
  position: relative;
  text-align: center;
}

.header__img {
  width: 514rpx;
  height: 134rpx;
}
.header__text {
  position: absolute;
  top: 20rpx;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 44rpx;
}

.main {
  overflow: hidden;
  margin-top: -70rpx;
  width: 700rpx;
  height: 500rpx;
  background-color: #d5e7ee;
  border-radius: 10rpx;
}
.main__header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 80rpx;
  background-color: #5382d0;
}
.main__header_icon {
  position: relative;
  z-index: 1;
  padding: 6rpx;
  width: 60rpx;
  height: 60rpx;
}

.day {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  margin: 20rpx 14rpx;
  width: 132rpx;
  height: 158rpx;
  border-radius: 10rpx;
  color: #ffffff;
  overflow: hidden;
}
.day--active {
  border: 6rpx solid #edce21;
}
.day--anime {
  animation: anime 0.5s linear both;
}
@keyframes anime {
  0% {
    transform: scale(3);
  }
  100% {
    transform: scale(1);
  }
}

.day__header {
  line-height: 44rpx;
  font-size: 32rpx;
  background: #f55e5e;
}
.day__body {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #3461ac;
}
.day__bg {
  position: absolute;
  bottom: -30%;
  width: 150%;
}
.day__icon {
  position: relative;
  margin-top: 20rpx;
  width: 52rpx;
  height: 52rpx;
}
.day__gold {
  position: relative;
  font-size: 28rpx;
}

.day__mask {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  line-height: 320rpx;
  text-align: center;
  font-size: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  transform: rotate(45deg);
  transform-origin: center center;
}
.day__text {
  padding: 4rpx;
  border: 4rpx solid #ffffff;
  border-radius: 6rpx;
}

.btn {
  margin: 28rpx auto;
  width: 376rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  font-size: 36rpx;
  color: #ffffff;
  background: #ea5e60;
  box-shadow: 10rpx 8rpx 0 0 #bd4e4d;
}
