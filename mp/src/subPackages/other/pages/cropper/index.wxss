Page {
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  user-select: none;
}

.cropper {
  position: absolute;
  top: 0;
  left: 0;
}

.cropper-wrapper {
  position: relative;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  width: 100%;
  height: 100%;
  background-color: #e5e5e5;
}

.cropper-buttons {
  position: absolute;
  bottom: 0;
  left: 0;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  box-sizing: border-box;
  padding: 0 20px;
  width: 100%;
  height: 100px;
  line-height: 100px;

  background-color: rgba(0, 0, 0, 0.95);
}

.cropper-buttons .upload,
.cropper-buttons .getCropperImage {
  text-align: center;
}

.btn {
  padding: 0 24px;
  height: 60px;
  line-height: 60px;
  border-radius: 4px;
  color: #ffffff;
}
