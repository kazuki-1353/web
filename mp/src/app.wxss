@import './static/animate.min.wxss';

page {
  min-height: 100%;
  line-height: 1.15;
  font-size: 32rpx;
}

image {
  vertical-align: middle;
}

button.reset {
  padding: 0;
  line-height: inherit;
  border-radius: 0;
  font-size: unset;
  background-color: transparent;
}
button.reset::after {
  border: none;
}
button.hover {
  color: rgba(0, 0, 0, 0.6);
  background-color: #dedede;
}

.clear::after {
  content: '';
  clear: both;
  display: block;
  visibility: hidden;
  height: 0;
}

.full {
  width: 100%;
  height: 100%;
}

.show {
  position: unset;
  visibility: unset;
  opacity: unset;
  pointer-events: unset;
}
.hide {
  position: absolute;
  visibility: hidden;
  opacity: 0;
  pointer-events: none;
}

.ghost {
  height: 0;
  overflow: hidden;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.justify {
  text-align: justify;
  text-align-last: justify;
}

.center {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.between {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  align-items: center;
}

.mask::before,
.mask-w::before,
.mask-b::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
}

.mask::before {
  background: rgba(0, 0, 0, 0.5);
}

.mask-w::before {
  background: #fff;
}

.mask-b::before {
  background: #000;
}

my-mask {
  position: absolute;
}
